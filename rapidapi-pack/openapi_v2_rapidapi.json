{
  "openapi": "3.0.0",
  "info": {
    "title": "TrustLayer AI - Control Plane v2",
    "description": "Enterprise AI Safety Control Plane for LLMs and Autonomous Agents. Prompt injection scanning, policy enforcement, incident kill switch, and agent drift detection.",
    "version": "2.0.0"
  },
  "servers": [
    {
      "url": "https://trustlayer-control-plane-v2.nimblyjson-api.workers.dev"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "summary": "Health Check",
        "operationId": "healthCheck",
        "responses": {
          "200": {
            "description": "API is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": { "type": "boolean" },
                    "name": { "type": "string" },
                    "version": { "type": "string" },
                    "ts": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/v2/scan": {
      "post": {
        "summary": "Prompt Injection Scan",
        "operationId": "scanPrompt",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["prompt"],
                "properties": {
                  "prompt": {
                    "type": "string",
                    "description": "The input text to scan"
                  },
                  "providers": {
                    "type": "array",
                    "items": { "type": "string" },
                    "default": ["heuristic", "openai_moderation"]
                  },
                  "mode": {
                    "type": "string",
                    "enum": ["worst_case", "best_case", "average"],
                    "default": "worst_case"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Scan result",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": { "type": "boolean" },
                    "request_id": { "type": "string" },
                    "verdict": { "type": "string" },
                    "score": { "type": "number" },
                    "blocked": { "type": "boolean" },
                    "providers": { "type": "array", "items": { "type": "object" } },
                    "policies": { "type": "array", "items": { "type": "object" } }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/v2/contracts": {
      "post": {
        "summary": "Contract Test",
        "operationId": "runContracts",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["text"],
                "properties": {
                  "text": {
                    "type": "string",
                    "description": "Text to test against contracts"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Contract test result",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": { "type": "boolean" },
                    "passed": { "type": "boolean" },
                    "failed_count": { "type": "integer" },
                    "checks": { "type": "array", "items": { "type": "object" } }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/v2/policy/upload": {
      "post": {
        "summary": "Upload Policy Pack",
        "operationId": "uploadPolicy",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "policy": {
                    "type": "string",
                    "description": "Policy pack as JSON string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Policy uploaded",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": { "type": "boolean" },
                    "tenant": { "type": "string" },
                    "pack": { "type": "object" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/v2/policy": {
      "get": {
        "summary": "Get Policy Pack",
        "operationId": "getPolicy",
        "responses": {
          "200": {
            "description": "Policy retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": { "type": "boolean" },
                    "tenant": { "type": "string" },
                    "pack": { "type": "object" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/v2/incident/lockdown": {
      "post": {
        "summary": "Incident Lockdown (Kill Switch)",
        "operationId": "incidentLockdown",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "scope": {
                    "type": "string",
                    "enum": ["tenant", "global"],
                    "default": "tenant"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Lockdown activated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": { "type": "boolean" },
                    "scope": { "type": "string" },
                    "on": { "type": "boolean" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/v2/incident/unlock": {
      "post": {
        "summary": "Incident Unlock",
        "operationId": "incidentUnlock",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "scope": {
                    "type": "string",
                    "enum": ["tenant", "global"],
                    "default": "tenant"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Lockdown deactivated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": { "type": "boolean" },
                    "scope": { "type": "string" },
                    "on": { "type": "boolean" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/v2/incident/status": {
      "get": {
        "summary": "Incident Status",
        "operationId": "incidentStatus",
        "responses": {
          "200": {
            "description": "Status retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": { "type": "boolean" },
                    "tenant": { "type": "string" },
                    "global": { "type": "boolean" },
                    "tenant_lockdown": { "type": "boolean" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/v2/drift/baseline": {
      "post": {
        "summary": "Set Drift Baseline",
        "operationId": "setDriftBaseline",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["suite_id", "baseline_output"],
                "properties": {
                  "suite_id": {
                    "type": "string",
                    "description": "Unique test suite identifier"
                  },
                  "baseline_output": {
                    "type": "string",
                    "description": "Expected golden output"
                  },
                  "baseline_tool_calls": {
                    "type": "array",
                    "items": { "type": "object" },
                    "description": "Expected tool calls"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Baseline stored",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": { "type": "boolean" },
                    "suite_id": { "type": "string" },
                    "stored": { "type": "boolean" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/v2/drift/check": {
      "post": {
        "summary": "Check for Drift",
        "operationId": "checkDrift",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["suite_id", "current_output"],
                "properties": {
                  "suite_id": {
                    "type": "string",
                    "description": "Test suite ID"
                  },
                  "current_output": {
                    "type": "string",
                    "description": "Current output to compare"
                  },
                  "tool_calls": {
                    "type": "array",
                    "items": { "type": "object" }
                  },
                  "threshold": {
                    "type": "number",
                    "default": 0.35
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Drift check result",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": { "type": "boolean" },
                    "suite_id": { "type": "string" },
                    "drift_score": { "type": "number" },
                    "threshold": { "type": "number" },
                    "verdict": { "type": "string" },
                    "semantic_distance": { "type": "number" },
                    "lexical_distance": { "type": "number" },
                    "tool_distance": { "type": "number" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/v2/drift/events": {
      "get": {
        "summary": "Get Drift Events",
        "operationId": "getDriftEvents",
        "parameters": [
          {
            "name": "suite_id",
            "in": "query",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": { "type": "integer", "default": 20 }
          }
        ],
        "responses": {
          "200": {
            "description": "Events retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": { "type": "boolean" },
                    "suite_id": { "type": "string" },
                    "events": { "type": "array", "items": { "type": "object" } }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/v2/audit/export.csv": {
      "get": {
        "summary": "Export Audit Trail",
        "operationId": "exportAudit",
        "responses": {
          "200": {
            "description": "CSV export",
            "content": {
              "text/csv": {
                "schema": { "type": "string" }
              }
            }
          }
        }
      }
    }
  }
}
