{
  "info": {
    "name": "TrustLayer AI v2",
    "description": "AI Safety Control Plane for LLMs & Agents. Prompt injection scanning, policy enforcement, incident kill switch, and drift detection.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        },
        "description": "Check if the API is running."
      }
    },
    {
      "name": "Prompt Injection Scan",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"prompt\": \"Your text to scan for prompt injection\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/v2/scan",
          "host": ["{{baseUrl}}"],
          "path": ["v2", "scan"]
        },
        "description": "Scan input for prompt injection attacks. Returns verdict (low/medium/high) and risk score."
      }
    },
    {
      "name": "Contract Test",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"text\": \"Text to test against safety contracts\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/v2/contracts",
          "host": ["{{baseUrl}}"],
          "path": ["v2", "contracts"]
        },
        "description": "Run contract tests for prompt injection, PII detection, and tool hijack patterns."
      }
    },
    {
      "name": "Get Policy",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/v2/policy",
          "host": ["{{baseUrl}}"],
          "path": ["v2", "policy"]
        },
        "description": "Retrieve your current policy pack. Requires Startup tier."
      }
    },
    {
      "name": "Upload Policy",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"policy\": \"{\\\"version\\\":\\\"1\\\",\\\"policies\\\":[{\\\"name\\\":\\\"block_secrets\\\",\\\"deny_if_contains\\\":[\\\"API_KEY\\\",\\\"SECRET\\\"]}]}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/v2/policy/upload",
          "host": ["{{baseUrl}}"],
          "path": ["v2", "policy", "upload"]
        },
        "description": "Upload a custom policy pack. Requires Business tier."
      }
    },
    {
      "name": "Incident Status",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/v2/incident/status",
          "host": ["{{baseUrl}}"],
          "path": ["v2", "incident", "status"]
        },
        "description": "Check if lockdown mode is active. Requires Startup tier."
      }
    },
    {
      "name": "Incident Lockdown",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"scope\": \"tenant\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/v2/incident/lockdown",
          "host": ["{{baseUrl}}"],
          "path": ["v2", "incident", "lockdown"]
        },
        "description": "Activate kill switch. Blocks medium+ risk prompts. Requires Business tier."
      }
    },
    {
      "name": "Incident Unlock",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"scope\": \"tenant\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/v2/incident/unlock",
          "host": ["{{baseUrl}}"],
          "path": ["v2", "incident", "unlock"]
        },
        "description": "Deactivate kill switch. Requires Business tier."
      }
    },
    {
      "name": "Set Drift Baseline",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"suite_id\": \"my-agent-v1\",\n  \"baseline_output\": \"Expected agent response here\",\n  \"baseline_tool_calls\": []\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/v2/drift/baseline",
          "host": ["{{baseUrl}}"],
          "path": ["v2", "drift", "baseline"]
        },
        "description": "Store a baseline for drift comparison. Requires Startup tier."
      }
    },
    {
      "name": "Check Drift",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"suite_id\": \"my-agent-v1\",\n  \"current_output\": \"Current agent response to compare\",\n  \"tool_calls\": [],\n  \"threshold\": 0.35\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/v2/drift/check",
          "host": ["{{baseUrl}}"],
          "path": ["v2", "drift", "check"]
        },
        "description": "Compare current output to baseline. Returns drift score and verdict. Requires Startup tier."
      }
    },
    {
      "name": "Get Drift Events",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/v2/drift/events?suite_id=my-agent-v1&limit=20",
          "host": ["{{baseUrl}}"],
          "path": ["v2", "drift", "events"],
          "query": [
            { "key": "suite_id", "value": "my-agent-v1" },
            { "key": "limit", "value": "20" }
          ]
        },
        "description": "Get historical drift events for a suite. Requires Startup tier."
      }
    },
    {
      "name": "Export Audit CSV",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/v2/audit/export.csv",
          "host": ["{{baseUrl}}"],
          "path": ["v2", "audit", "export.csv"]
        },
        "description": "Download audit trail as CSV. Requires Business tier."
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://trustlayer-ai-control-plane-for-safe-llms-agents.p.rapidapi.com"
    }
  ]
}
